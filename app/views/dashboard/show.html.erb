<ul class="dashboard-tabs nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="tab-active dash-tab nav-item">
    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Your Hangouts</a>
  </li>
  <li class="tab dash-tab nav-item">
    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Attending</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <div class="locations-card-container-dashboard">
      <div>
        <% current_user.hangouts.each do |hangout| %>
        <div class="card-location">
          <div class="location-image" style="background-image: url(<%= hangout.location&.photo %>)">
          </div>
          <div class="card-location-infos">
            <h2><%= hangout.name %></h2>
            <h3><strong>At:</strong> <%= hangout.location&.title %></h3>
            <h3><strong>On:</strong> <%= hangout.date&.date.strftime("%A %b %d at: %I:%M %p") %> </h3>
            <!-- fix this path -->
            <h3><%= link_to "details", hangout_path(hangout) %></h3>
            <!-- fix this path -->
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    <div class="locations-card-container-dashboard">
      <div>
        <% @attending_hangouts.each do |hangout| %>
        <div class="card-location">
          <div class="location-image" style="background-image: url(<%= hangout.location&.photo %>)">
          </div>
          <div class="card-location-infos">
            <h2><%= hangout.name %></h2>
            <h3><strong>At:</strong> <%= hangout.location&.title %></h3>
            <h3><strong>On:</strong> <%= hangout.date&.date %> </h3>
            <!-- fix this path -->
            <h3><%= link_to "details", hangout_path(hangout) %></h3>
            <!-- fix this path -->
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="create-hangout-btn-home">
  <%= link_to "Create a hangout", new_hangout_path, class: "hangout-btn btn-primary" %>
</div>
